# Git related command-line customization
function parse_git_branch {
  ref=$(git symbolic-ref HEAD 2> /dev/null) || return
  echo "("${ref#refs/heads/}")"
}
RED="\[\033[0;31m\]"
YELLOW="\[\033[0;33m\]"
GREEN="\[\033[0;32m\]"
FOREGROUND="\[\033[0m\]"

# Get Virtual Env
if [[ $VIRTUAL_ENV != "" ]]; then
      # Strip out the path and just leave the env name
      venv="${RED}[${VIRTUAL_ENV##*/}]"
else
      # In case you don't have one activated
      venv=''
fi

PS1="$GREEN\w$YELLOW\$(parse_git_branch)$venv$GREEN\$ $FOREGROUND"

# Path
export GOPATH=$HOME/go
